<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="onclick_menu">
        <item name="android:background">@drawable/touch_selector</item>
    </style>

    <style name="clickable_item_style" parent="onclick_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/menu_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/menu_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/menu_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/menu_padding_horizontal</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/menu_padding_drawable</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
    </style>

    <style name="menu_style" parent="clickable_item_style">
        <item name="android:drawableEnd">@drawable/ic_navigate_next</item>
    </style>

    <style name="contact_style" parent="clickable_item_style">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="team_member_name">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="news_message_box_style">
        <item name="android:background">@drawable/news_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="news_message_style">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:drawablePadding">@dimen/news_padding_drawable</item>
    </style>

    <style name="news_date_style">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
